<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <style type="text/css">
      html, body {
        background-color: lightblue;
        height: 100%;
        overflow: hidden;
      }
      .container {
        background-color: white;
        width: 80%;
        height: 90%;
      }
      #search-form {
        //background-color: red;
      }
      .results {
        margin-top: 80px;
        border-top: 1px solid;
      }
      .results-list {
        overflow: scroll;
      }
      .footer {
        height: 10%;
        background-color: darkblue;
      }
    </style>

    <title>Rails demo</title>
  </head>
  <body>
    <div class="container" style="">
      <h2>Search vietamese name</h2>
      <div id="search-form">
        <%= form_tag("/search/search", method: "get") do %>
          <%= label_tag(:q, "Search by:") %>
          <%= select_tag(:name_type, options_for_select({"First name": 1, "Middle name": 2, "Last Name": 3}, "1")) %>
          <%= text_field_tag(:q, nil, placeholder: 'nham, ニャム', size: 50) %>
          <%= submit_tag("Search") %>
        <% end %>
      </div>

      <div class="results">
        <% if @results && @results[:search_key].present? %>
          <h3>Results for: <%= @results[:search_key] %></h3>
          <div class="result-list">
            <% @results[:by_kanji].each do |result| %>
              <p><%= result.by_kanji %></p>
            <% end %>
            <% @results[:by_romaji].each do |result| %>
              <p><%= result.by_romaji %></p>
            <% end %>
            <% @results[:by_katakana].each do |result| %>
              <p><%= result.by_katakana %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="footer">
    </div>

    <!-- Optional JavaScript -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
