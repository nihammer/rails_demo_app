<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style type="text/css">
      html, body {
        background-color: lightblue;
        height: 100%;
        overflow: hidden;
      }
      .container {
        background-color: white;
        width: 80%;
        height: 90%;
      }
      #search-form {
        //background-color: red;
      }
      .results {
        margin-top: 80px;
        border-top: 1px solid;
      }
      .results-list {
        overflow: scroll;
      }
      .footer {
        height: 10%;
        background-color: darkblue;
      }
    </style>

    <title>Hello, world!</title>
  </head>
  <body>
    <div class="container" style="">
      <h2>Convert name</h2>
      <div id="search-form">
        <%= form_tag("/search/search", method: "get") do %>
          <%= label_tag(:q, "Search for:") %>
          <%= select_tag(:name_type, options_for_select({"First name": 1, "Middle name": 2, "Last Name": 3}, "1")) %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Search") %>
        <% end %>
      </div>

      <div class="results">
        <% if @results[:search_key].present? %>
          <h3>Results for: <%= @results[:search_key] %></h3>
          <div class="result-list">
            <% @results[:by_kanji].each do |result| %>
              <p><%= result.by_kanji %></p>
            <% end %>
            <% @results[:by_romaji].each do |result| %>
              <p><%= result.by_romaji %></p>
            <% end %>
            <% @results[:by_katakana].each do |result| %>
              <p><%= result.by_katakana %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="footer">
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
